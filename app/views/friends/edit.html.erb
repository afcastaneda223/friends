<div class="card">
  <div class="card-header text-center">
    <h1>Editing Friend</h1>
  </div>
  <div class="card-body">
    <%= render 'form', friend: @friend %>
    <%= link_to 'Show', @friend, class:"btn btn-secondary my-3" %> 
    <%= link_to 'Back', friends_path, class:"btn btn-dark m-3" %></br>
    <%= link_to 'Destroy', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  </div>
    
</div>


