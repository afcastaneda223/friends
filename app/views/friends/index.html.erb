<% if user_signed_in? %>
  <div class="card">
    <div class="card-header text-center">
        <h1>Friends</h1>  
    </div>
    <div class="card-body">
    <table class= "table table-striped table-hover table-bordered mt-5" >
    <thead class = "table-dark ">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
        <tr>
          <td>
          <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
          </td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Friend', new_friend_path, class:"btn btn-primary" %>

    </div>
  </div>

<% else %>

  <h1>hello world</h1>

<% end %>